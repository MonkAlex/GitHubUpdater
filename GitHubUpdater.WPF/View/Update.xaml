<Window x:Class="GitHubUpdater.WPF.View.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        DataContextChanged="Converting_OnDataContextChanged"
        Title="{Binding Title}" Height="120" Width="450">
  <Window.TaskbarItemInfo>
    <TaskbarItemInfo ProgressState="{Binding TaskbarItemProgressState}" ProgressValue="{Binding Percent}"/>
  </Window.TaskbarItemInfo>
  <ContentPresenter Content="{Binding}"/>
</Window>

